<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	tools:context="it.sephiroth.android.library.subtlerater.demo.MainActivity">

	<RelativeLayout
		android:id="@+id/layout01"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:orientation="vertical"
		android:gravity="center_horizontal"
		android:measureWithLargestChild="true">

		<Button
			android:layout_centerHorizontal="true"
			android:id="@+id/show_button"
			android:text="@string/show"
			android:layout_width="150dip"
			android:layout_height="wrap_content" />

		<Button
			android:layout_centerHorizontal="true"
			android:layout_below="@+id/show_button"
			android:enabled="false"
			android:id="@+id/hide_button"
			android:text="@string/hide"
			android:layout_width="150dip"
			android:layout_height="wrap_content" />

		<Button
			android:layout_centerHorizontal="true"
			android:layout_below="@id/hide_button"
			android:id="@+id/force_show_button"
			android:text="@string/force_show"
			android:layout_width="150dip"
			android:layout_height="wrap_content" />

		<CheckBox
			android:layout_centerHorizontal="true"
			android:layout_below="@id/force_show_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/auto_hide_checkbox"
			android:id="@+id/auto_hide" />

		<CheckBox
			android:layout_centerHorizontal="true"
			android:layout_below="@id/auto_hide"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Use custom View"
			android:id="@+id/custom_view" />
	</RelativeLayout>

</RelativeLayout>
